<?xml version="1.0" encoding="UTF-8" ?>
<Configuration monitorInterval="30">
	<Appenders>

		<RollingFile name="AllLogsAppender" fileName="target/All.log"
			filePattern="target/old/All_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="TraceAppender" fileName="target/Trace.log"
			filePattern="target/old/Trace_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" />
				<ThresholdFilter level="DEBUG" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="INFO" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="WARN" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="ERROR" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="FATAL" onMatch="DENY"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="DebugAppender" fileName="target/Debug.log"
			filePattern="target/old/Debug_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="DEBUG" />
				<ThresholdFilter level="INFO" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="WARN" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="ERROR" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="FATAL" onMatch="DENY"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="InfoAppender" fileName="target/Info.log"
			filePattern="target/old/Info_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="INFO" />
				<ThresholdFilter level="WARN" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="ERROR" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="FATAL" onMatch="DENY"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="WarnAppender" fileName="target/Warn.log"
			filePattern="target/old/Warn_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="WARN" />
				<ThresholdFilter level="ERROR" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="FATAL" onMatch="DENY"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="ErrorAppender" fileName="target/Error.log"
			filePattern="target/old/Error_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="ERROR" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="FrontEndAppender" fileName="target/FrontEnd.log"
			filePattern="target/old/FrontEnd_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="SpringAppender" fileName="target/Spring.log"
			filePattern="target/old/Spring_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="HibernateAppender" fileName="target/Hibernate.log"
			filePattern="target/old/Hibernate_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

		<RollingFile name="CacheAppender" fileName="target/Cache.log"
			filePattern="target/old/Cache_%d{yyyyMMdd}_%i.log.gz"
			append="true">
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="TRACE" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%C:%M:%L) - %m%n" />
		</RollingFile>

	</Appenders>

	<Loggers>

		<!-- The logs of the folloging packages will be placed in *.log files -->
		<Logger name="com.sun.faces">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="FrontEndAppender" />
		</Logger>

		<Logger name="javax.faces">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="FrontEndAppender" />
		</Logger>

		<Logger name="org.primefaces">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="FrontEndAppender" />
		</Logger>

		<Logger name="org.metawidget">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="FrontEndAppender" />
		</Logger>

		<Logger name="org.springframework">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="SpringAppender" />
		</Logger>

		<Logger name="org.hibernate">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="HibernateAppender" />
		</Logger>

		<Logger name="net.sf.ehcache">
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
			<AppenderRef ref="CacheAppender" />
		</Logger>

		<!-- Add here your own packages -->
		<Logger name="com.spotifire">
			<AppenderRef ref="TraceAppender" />
			<AppenderRef ref="DebugAppender" />
			<AppenderRef ref="InfoAppender" />
			<AppenderRef ref="WarnAppender" />
			<AppenderRef ref="ErrorAppender" />
		</Logger>

		<!-- All logs will be placed here (target/All.log), from each 
			library, yours included -->
		<Root level="TRACE">
			<AppenderRef ref="AllLogsAppender" />
		</Root>
	</Loggers>


</Configuration>
